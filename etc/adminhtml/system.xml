<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="mercadopago_base" translate="label comment" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label><![CDATA[<div class='mercadopago-payment-logo'></div><div class='mercadopago-payment-byline'><p><b>Mercado Pago</b></p><p>Oferece pagamentos com cartões de crédito, débito e também meios offline - além de vantagens exclusivas para quem paga logado na conta Mercado Pago, como créditos, descontos e outras condições especiais.</p></div>]]></label>
                <fieldset_css>complex mercadopago-payment-section</fieldset_css>
                <frontend_model>MercadoPago\PaymentMagento\Model\Adminhtml\Source\PaymentGroup</frontend_model>
                <comment><![CDATA[Technical support available <a href="https://github.com/mercadopago/payment-magento/issues/new/choose">here</a>.]]></comment>
                <include path="MercadoPago_PaymentMagento::system/basic_settings.xml"/>
                <include path="MercadoPago_PaymentMagento::system/checkout_pro.xml"/>
                <include path="MercadoPago_PaymentMagento::system/checkout_transparent.xml"/>
                <include path="MercadoPago_PaymentMagento::system/merchant_profile.xml"/>
            </group>
        </section>
    </system>
</config>
